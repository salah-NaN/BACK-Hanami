{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["eslint"],
    "baseUrl": ".",
    "paths": {
      "@models/*": ["./models/*"],
      "@database/*": ["./database/*"],
      "@routes/*": ["./routes/*"],
      "@controllers/*": ["./controllers/*"],
      "@middlewares/*": ["./middlewares/*"]
    }
  }
}
